{
  "version": "1.0.12",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "docs",
    "packages/*",
    "rust/*"
  ],
  "command": {
    "bootstrap": {
      "npmClient": "yarn",
      "npmClientArgs": [
        "--frozen-lockfile"
      ]
    },
    "version": {
      "allowBranch": [
        "master",
        "lts/*"
      ]
    }
  }
}
